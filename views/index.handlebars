{{!-- Background --}}
<div id="main">
  {{!-- Intentionally blank --}}
</div>

{{!-- Header --}}
<div class="row" id="title">
  <div class="col-md-12">
    <h1>Eat da Burger!!!</h1>
  </div>
</div>

{{!-- Container --}}
<div class="container mt-5">

  {{!-- Burgers --}}
  <div class="container">
    <div class="row">

      {{!-- Non-devoured burgers --}}
      <div class="col-md-6">
        <h4>Burgers to eat:</h4>
        <ul>
          {{#each burgers}} {{#unless this.devoured}}
          <li>
            {{this.burger_name}}
            <button class="btn btn-dark float-right devour-button" data-id="{{this.id}}">Devour</button>
          </li>
          {{/unless}} {{/each}}
        </ul>
      </div>

      {{!-- Devoured burgers --}}
      <div class="col-md-6">
        <h4>Devoured burgers:</h4>
        <ul>
          {{#each burgers}} {{#if this.devoured}}
          <li>
            {{this.burger_name}}
          </li>
          {{/if}} {{/each}}
        </ul>
      </div>

    </div>
  </div>

  {{!-- Submit new burger section --}}
  <div class="container" id="add-burger-section">
    <div class="row">

      <div class="col-md-2">
        {{!-- Intentionally blank --}}
      </div>

      {{!-- Add a burger --}}
      <div class="col-md-8">

        <form id="submit-form" action="/api/burgers" method="POST">
          <div class="row form-group">
            <div class="col-md-2">
              {{!-- Intentionally blank --}}
            </div>
            <div class="col-md-8">
              <input type="text" class="form-control" id="burger-form"></input>
            </div>
            <div class="col-md-2">
              {{!-- Intentionally blank --}}
            </div>
          </div>

          <div class="row form-group">
            <div class="col-md-4">
              {{!-- Intentionally blank --}}
            </div>
            <div class="col-md-4">
              <button type="submit" class="btn btn-dark" id="add-button">Add burger</button>
            </div>
            <div class="col-md-4">
              {{!-- Intentionally blank --}}
            </div>
          </div>
        </form>

      </div>
      <div class="col-md-2">
        {{!-- Intentionally blank --}}
      </div>

    </div>
  </div>
</div>